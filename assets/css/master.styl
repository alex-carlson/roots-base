@import '_settings'

normalize-css()
base()

body
  padding: 50px
  font-weight: 900
  overflow-x: hidden;

  p
    font-size: 13px;
    max-width: 380px;

  .black
    color: black;

  h1, h2, h3, h4, h5, h6, a
    font-weight: 900;


  h1, h2, h3, h4, h5, h6
    margin: 0;
    width: 100%;
    float: left;

    a:hover
      border-bottom: 0;

  h4, h5, h6
    color: black;
    font-weight: 500;

  .logo
    font-size: 40px;
    transform: translateX(-8px);

  section, footer
    display: inline-block;
    width: 100%;

  footer
    margin-top: 50px;

    p, a
      font-size: 10px;
      color: gray;
      font-weight: 300;

      &:hover
        border-bottom: 0;

    svg
      float: left;

    p
      max-width: 200px;
      margin: 0 20px;

  p
    font-weight: 500;
    color: black;
    margin: 0.3em 0;
    float: left;
    margin-bottom: 20px;

  a
    color: brand;
    text-decoration: none;
    cursor: pointer;

    &:hover
      border-bottom: solid 1px brand;

  ul
    list-style-type: none;
    padding: 0;
    font-weight: bold;
    width: 100%;
    float: left;
    margin: 0px 0 30px 0;

    li
      float: left;
      padding: 3px 15px;

      &:first-of-type
        padding-left: 0;

  .divider
    height: 250px;
    background: brand;
    float: left;
    width: 110%;
    margin-bottom: 10px;

  .half
    width: 43%;
    padding: 2% 7% 0 0;
    float: left;

    h2
      margin: 0.25em 0;

  .third
    width: 30%;
    padding: 2% 0.5%;
    float: left;

  item
    float: left;
    width: 100%;
    margin-bottom: 20px;

@media (max-width: 768px)
  body
    padding: 15px;

    p
      width: 100%;
      clear: both;
      max-width: 100%;

    .half
      width: 100%;
